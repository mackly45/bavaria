{
    "design_system": {
        "meta": {
            "name": "Bavaria Premium One-Page",
            "version": "1.1.0",
            "description": "Minimalist, premium dark mode design system with parallax effects for a beverage landing page."
        },
        "colors": {
            "palette": {
                "primary": "#FFFFFF",
                "secondary": "#000000",
                "accent": "#FF6B00",
                "background": "#050505",
                "surface": "#121212",
                "text_primary": "#FFFFFF",
                "text_secondary": "rgba(255, 255, 255, 0.7)",
                "divider": "rgba(255, 255, 255, 0.1)"
            },
            "usage": {
                "background_main": "background",
                "text_main": "text_primary",
                "button_primary_bg": "primary",
                "button_primary_text": "secondary",
                "button_secondary_border": "primary",
                "button_secondary_text": "primary",
                "accent_elements": "accent"
            }
        },
        "typography": {
            "font_family": {
                "heading": "'Outfit', sans-serif",
                "body": "'Inter', sans-serif"
            },
            "weights": {
                "light": 300,
                "regular": 400,
                "medium": 500,
                "bold": 700
            },
            "hierarchy": {
                "h1": {
                    "size": "clamp(3rem, 10vw, 8rem)",
                    "weight": "bold",
                    "line_height": "1.1",
                    "letter_spacing": "-0.02em",
                    "text_transform": "uppercase"
                },
                "h2": {
                    "size": "clamp(2rem, 5vw, 4rem)",
                    "weight": "medium",
                    "line_height": "1.2",
                    "letter_spacing": "-0.01em"
                },
                "subtitle": {
                    "size": "1.25rem",
                    "weight": "light",
                    "text_transform": "uppercase",
                    "letter_spacing": "0.1em"
                },
                "body": {
                    "size": "1rem",
                    "line_height": "1.5"
                },
                "button": {
                    "size": "0.875rem",
                    "weight": "medium",
                    "text_transform": "uppercase",
                    "letter_spacing": "0.05em"
                }
            }
        },
        "spacing": {
            "scale": {
                "xs": "0.5rem",
                "sm": "1rem",
                "md": "2rem",
                "lg": "4rem",
                "xl": "8rem",
                "xxl": "12rem"
            },
            "layout": {
                "section_padding": "10vh 5vw",
                "container_max_width": "1440px"
            }
        },
        "grid_layout": {
            "columns": 12,
            "gutter": "20px",
            "margin": "5vw",
            "breakpoints": {
                "mobile": "0px",
                "tablet": "768px",
                "desktop": "1024px",
                "wide": "1440px"
            }
        },
        "components": {
            "buttons": {
                "base": {
                    "borderRadius": "9999px",
                    "padding": "1rem 2.5rem",
                    "transition": "all 0.3s cubic-bezier(0.4, 0, 0.2, 1)",
                    "cursor": "pointer",
                    "borderWidth": "1px",
                    "borderStyle": "solid"
                },
                "primary": {
                    "backgroundColor": "primary",
                    "color": "secondary",
                    "borderColor": "primary",
                    "hover": {
                        "transform": "scale(1.05)",
                        "backgroundColor": "rgba(255, 255, 255, 0.9)"
                    }
                },
                "secondary_ghost": {
                    "backgroundColor": "transparent",
                    "color": "primary",
                    "borderColor": "rgba(255, 255, 255, 0.3)",
                    "backdropFilter": "blur(10px)",
                    "hover": {
                        "borderColor": "primary",
                        "backgroundColor": "rgba(255, 255, 255, 0.1)"
                    }
                }
            },
            "hero": {
                "height": "100vh",
                "content_alignment": "center",
                "text_overlay_mode": "mix-blend-mode: exclusion"
            },
            "navigation": {
                "position": "sticky",
                "top": 0,
                "backdrop_blur": "20px",
                "background": "rgba(5, 5, 5, 0.8)"
            }
        },
        "iconography": {
            "style": "geometric_minimalist",
            "stroke_width": "1.5px",
            "size": {
                "sm": "16px",
                "md": "24px",
                "lg": "32px",
                "xl": "48px"
            },
            "usage": "Use outlined icons for UI elements, filled for active states."
        },
        "effects": {
            "shadows": {
                "soft": "0 10px 30px rgba(0,0,0,0.3)",
                "glow": "0 0 50px rgba(255,255,255,0.1)"
            },
            "transitions": {
                "default": "0.3s ease-out",
                "slow": "0.8s cubic-bezier(0.2, 0.8, 0.2, 1)"
            }
        },
        "animations": {
            "scroll_based": {
                "parallax_layer": {
                    "type": "transform",
                    "property": "translateY",
                    "speed_factor": "var(--parallax-speed)",
                    "direction": "reverse"
                },
                "fade_in_up": {
                    "from": {
                        "opacity": 0,
                        "transform": "translateY(50px)"
                    },
                    "to": {
                        "opacity": 1,
                        "transform": "translateY(0)"
                    },
                    "trigger": "intersection_observer",
                    "threshold": 0.2
                }
            },
            "loading_screen": {
                "duration": "2.5s",
                "sequence": [
                    {
                        "time": "0s",
                        "action": "logo_pulse"
                    },
                    {
                        "time": "1.5s",
                        "action": "curtain_reveal"
                    }
                ]
            }
        },
        "patterns": {
            "product_display": {
                "composition": "Central floating can with parallax background elements",
                "lighting": "Rim light highlighting the can silhouette"
            },
            "feature_grid": {
                "layout": "Bento box style or alternating zig-zag",
                "card_style": "Glassmorphism with 1px border"
            }
        },
        "responsive_rules": {
            "h1_scaling": "fluid_typography",
            "grid_stacking": "mobile_vertical_stack",
            "padding_adjustment": "reduce_by_50_percent_on_mobile"
        }
    }
}